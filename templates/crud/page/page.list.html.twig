{% set page_name = 'Setup pages' %}


{% extends "layout/layout.html.twig" %}

{% block title %}{{ page_name|trans }}{% endblock %}

{% block content %}
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>{{ page_name|trans }}</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="{{ path('home') }}">{{ 'Home'|trans }}</a></li>
                        <li class="breadcrumb-item active">{{ page_name|trans }}</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-title">{{ 'List of pages'|trans }}</span>

                        <div class="card-tools">
                            <div class="input-group input-group-sm">
                                <a href="{{ path('page_admin_create') }}" type="submit" class="btn btn-primary">{{ 'Create'|trans }}</a>
                            </div>
                        </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body table-responsive p-0">
                        <table class="table table-hover text-nowrap">
                            <thead>
                            <tr>
                                <th>â„–</th>
                                <th>Group ID</th>
                                <th>{{ 'Name'|trans }}</th>
                                <th>{{ 'Actions'|trans }}</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for page in page_list %}

                                <tr>
                                    <td>{{ page.groupId }}</td>
                                    <td>{{ page.name|e }}</td>
                                    <td>
                                        <a href="{{ path('page_admin_update_by_id', {id: page.id}) }}" class="btn btn-warning">{{ 'Update'|trans }}</a>
                                        <a href="{{ path('page_admin_delete_by_id', {id: page.id}) }}" class="btn btn-danger">{{ 'Delete'|trans }}</a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
                <div class="card">
                    <div class="card-header">
                        <h4>{{ 'Pages and its code name for creating settings'|trans }}:</h4>
                        <p>{{ 'Home'|trans }} - home</p>
                        <p>{{ 'Watering'|trans }} - watering</p>
                        <p>{{ 'Fire secure'|trans }} - fire-security</p>
                        <p>{{ 'Security'|trans }} - security</p>
                        <p>{{ 'Outbuilding'|trans }} - outbuilding</p>
                        <p>{{ 'All device data'|trans }} - devices - {{ 'all devices in the system (displayed automatically, no need to create a page)'|trans }}</p>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.row -->
    </div>

{% endblock %}