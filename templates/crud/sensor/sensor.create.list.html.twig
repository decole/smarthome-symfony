{% set page_name = 'Creating a sensor. Type selection' %}


{% extends "layout/layout.html.twig" %}

{% block title %}{{ page_name|trans }}{% endblock %}

{% block content %}
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>{{ page_name|trans }}</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="{{ path('home') }}">{{ 'Home'|trans }}</a></li>
                        <li class="breadcrumb-item active">{{ page_name|trans }}</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12 row-cols-md-2 offset-md-3 row-cols-lg-2 offset-lg-3">
                <div class="card">
                    <div class="card-header">
                        <span class="card-title">{{ 'List of sensor types'|trans }}</span>

                        <div class="card-tools">
                            <div class="input-group input-group-sm">
                                <a href="{{ path('sensors_admin') }}" type="submit" class="btn btn-primary">{{ 'Back'|trans }}</a>
                            </div>
                        </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body table-responsive p-0">
                        <table class="table table-hover text-nowrap">
                            <thead>
                            <tr>
                                <th width="80%">Type</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for sensorType in sensorTypes %}
                                <tr>
                                    <td>{{ typeTranscribe[sensorType]|capitalize }}</td>
                                    <td>
                                        <a href="{{ path('sensors_admin_create') }}/{{ sensorType }}" class="btn btn-warning">{{ 'Create'|trans }}</a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
        </div>
        <!-- /.row -->
    </div>

{% endblock %}