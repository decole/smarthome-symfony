FROM registry.gitlab.com/decole/uberserver-symfony:base

MAINTAINER decole <decole2014@yandex.ru>

ARG USER=gitlab-runner
ARG UID=1000
ARG GID=1000

RUN addgroup -g ${GID} -S gitlab-runner && adduser --uid ${UID} --ingroup ${USER} -S -g ${USER} ${USER}

RUN mkdir -p && chown -R ${USER}:${USER} /home/${USER}  \
    && chown -R ${USER}:${USER} /var/www

WORKDIR /var/www

USER ${USER}